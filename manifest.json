{
    "manifest_version": 3,
    "name": "Text Zoom Box",
    "version": "1.0",
    "description": "Zooms in on text in a floating box on hover.",
    "permissions": ["storage", "scripting"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "all_frames": true
      }
    ]
  }